{% extends "AppBundle::base.html.twig" %}

{% block title %}
{{ parent() }} - Reset
{% endblock %}

{% block body %}
<div class="card-header">
    <h4>Reset</h4>
</div>

<div class="card-body">
    <input type="hidden" name="_csrf_token" value="{{csrf_token('authenticate')}}" />
    <div class="form-group">
        <button  class="btn btn-success btn-lg btn-block" tabindex="4" >
            Un email de confirmation a été envoyé à {{ email }}
        </button>
    </div>
    Inscrit ? <a href="{{ path('security_login_form') }}">Connexion</a>

</div>
{% endblock %}
