{% extends "AppBundle::base.html.twig" %}

{% block title %}
{{ parent() }} - Reset
{% endblock %}

{% block body %}
<div class="card-header">
    <h4>Reset</h4>
</div>

{% for message in app.flashes('Utilisateur-Inexistant')%}
    <div class="flash_message_danger" id="FlashMessage">Utilisateur Inexistant</div>
{% endfor %}

<div class="card-body">
    <form method="post" action="{{path('reset_password_send_email') }}" autocomplete="off"  class="needs-validation" novalidate="">
    <input type="hidden" name="_csrf_token" value="{{csrf_token('authenticate')}}" />
        <div class="form-group">
            <label for="email">Email</label>
            <input id="email" type="email" class="form-control" name="identifiant" placeholder="infos@sudogen.app" tabindex="1" required autofocus>
            <div class="invalid-feedback">
                Please fill in your email
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4" type="submit">
                Send
            </button>
        </div>
    </form>
</div>
{% endblock %}
{% block mark %}
Inscrit ? <a href="{{ path('security_login_form') }}">Connexion</a>
{% endblock %}